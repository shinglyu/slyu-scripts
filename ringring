# Dependency: sox
eval "$@";
# The $? test must follow the eval line, don't put anything in between
if [ $? -eq 0 ]; then
  BGCOLOR=green
  MSG=" finished successfully"
else
  BGCOLOR=red
  MSG=" failed!"
fi

#notify-send "_
#***********************************
#FINISHED: $@
#***********************************"

#play -q $HOME/slyu-scripts/notify.ogg &
#
# echo "${BGCOLOR}"
gxmessage "\"${@}\" ${MSG}" -fn "helvetica bold 80" -bg "${BGCOLOR}" --wrap
